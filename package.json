{
  "name": "adopter",
  "version": "0.9.1",
  "type": "module",
  "description": "Auditing tool for tracking packages and modules usage, for increasing adoption of libraries",
  "repository": "fernandopasik/adopter",
  "author": "Fernando Pasik <fernando@pasik.com.ar> (https://fernandopasik.com)",
  "license": "MIT",
  "bin": {
    "adopter": "./bin/adopter.js"
  },
  "main": "adopter.js",
  "module": "adopter.js",
  "typings": "adopter.d.ts",
  "files": [
    "/adopter.*",
    "/bin",
    "/lib"
  ],
  "keywords": [
    "adoption",
    "cli",
    "dependencies",
    "libraries",
    "metrics",
    "modules",
    "packages",
    "report",
    "statistics",
    "stats",
    "usage"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && chmod +x bin/adopter.js",
    "check-types": "tsc --noEmit",
    "clean": "del coverage bin lib adopter.*",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext js,ts",
    "postpublish": "pinst --enable",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "preversion": "yarn verify",
    "start": "tsc -p tsconfig.build.json -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "verify": "yarn format:check && yarn lint && yarn check-types && yarn test:coverage && yarn build"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^6.0.0",
    "globby": "^12.0.2",
    "loglevel": "^1.8.0",
    "progress": "^2.0.3",
    "typescript": "^4.5.2",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.3",
    "@types/progress": "^2.0.5",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.4",
    "jest": "^27.4.2",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.5.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-pkg": "^0.11.1",
    "prettier-plugin-sh": "^0.8.1",
    "ts-jest": "^27.0.7",
    "type-fest": "^2.7.0"
  },
  "sideEffects": false
}
