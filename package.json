{
  "name": "adopter",
  "version": "0.3.0",
  "type": "module",
  "description": "Auditing tool for increasing adoption of libraries",
  "repository": "fernandopasik/adopter",
  "author": "Fernando Pasik <fernando@pasik.com.ar> (https://fernandopasik.com)",
  "license": "MIT",
  "bin": {
    "adopter": "./bin/adopter.js"
  },
  "main": "adopter.js",
  "module": "adopter.js",
  "typings": "adopter.d.ts",
  "files": [
    "/adopter.*",
    "/bin",
    "/lib"
  ],
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit -p tsconfig.all.json",
    "clean": "del coverage lib adopter.*",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext js,ts",
    "postpublish": "pinst --enable",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "preversion": "yarn verify",
    "start": "tsc -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "verify": "yarn lint && yarn check-types && yarn test:coverage && yarn build"
  },
  "dependencies": {
    "execa": "^5.1.1",
    "globby": "^12.0.2",
    "loglevel": "^1.7.1",
    "nanocolors": "^0.2.12",
    "typescript": "^4.4.3",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/jest": "^27.0.2",
    "@types/yargs": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "del-cli": "^4.0.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-pkg": "^0.10.0",
    "prettier-plugin-sh": "^0.7.1",
    "ts-jest": "^27.0.5",
    "type-fest": "^2.3.4"
  },
  "sideEffects": false
}
