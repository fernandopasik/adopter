{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "target": "es2019"
  },
  "exclude": ["adopter.*", "bin", "coverage", "lib", "eslint.config.js"],
  "include": [".**/**/*", "**/*"]
}
