{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "exclude": ["/adopter.*", "/bin", "/lib"],
  "include": [".**/**/*", "**/*"]
}
